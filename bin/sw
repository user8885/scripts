#!/usr/bin/env bash

if [ -f "$1" ]; then
 rm -f ~/.config/wallpaper
 
 ln -sf "$1" ~/.config/wallpaper

 if pgrep -f Xwayland ; then
	 pkill swaybg
	 swaybg -i ~/.config/wallpaper
 fi
 
 if pgrep -f Xorg ; then
   if ! pgrep -f Xwayland ; then
     feh --no-fehbg --bg-fill ~/.config/wallpaper
   fi
 fi
fi

exit
